<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacob.v5library.Information"
    android:background="@android:color/black">

    <TextView
        android:layout_height="52dp"
        android:id="@+id/titleTxt"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        android:layout_marginEnd="7dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="Title:"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:id="@+id/textView3"
        android:textSize="35sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Title:"
        android:layout_width="81dp"
        android:layout_height="52dp"
        android:id="@+id/textView5"
        android:textSize="35sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        app:layout_constraintTop_toBottomOf="@+id/removeBtn"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_height="43dp"
        android:id="@+id/authorTxt"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="0dp" />

    <TextView
        android:text="Author:"
        android:layout_width="117dp"
        android:layout_height="43dp"
        android:id="@+id/textView4"
        android:textSize="35sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="2dp" />

    <TextView
        android:text="Author:"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:id="@+id/textView6"
        android:textSize="35sp"
        android:textColor="@android:color/background_light"
        android:gravity="left|center"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:text="Update book"
        android:layout_width="173dp"
        android:id="@+id/updateBtn"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/newAuthorTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.05"
        android:layout_height="62dp" />

    <Button
        android:text="Delete book"
        android:layout_width="173dp"
        android:layout_height="62dp"
        android:id="@+id/removeBtn"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="2dp" />

    <EditText
        android:layout_height="52dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newTitleTxt"
        android:hint="New title"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="@android:color/background_light"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5" />

    <EditText
        android:layout_height="51dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newAuthorTxt"
        android:hint="New author"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="@android:color/background_light"
        android:layout_width="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
